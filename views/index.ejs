<%- include('partials/header', { title: 'Blog Home' }) %>

        <div class="posts">
                <% posts.forEach(post=> { %>
                        <div class="post">
                                <h2>
                                        <%= post.title %>
                                </h2>
                                <p>
                                        <%= post.content %>
                                </p>
                                <a href="/edit/<%= post.id %>">Edit</a>
                                <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
                                        <button type="submit">Delete</button>
                                </form>
                        </div>
                        <% }); %>
        </div>

        <%- include('partials/footer') %>